<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--自定义属性-->
    <!--拖拽气泡-->
    <declare-styleable name="DragBubbleView2">
        <attr name="bubble_radius" format="dimension"/>
        <attr name="bubble_color" format="color"/>
        <attr name="bubble_text" format="string"/>
        <attr name="bubble_textSize" format="dimension"/>
        <attr name="bubble_textColor" format="color"/>
    </declare-styleable>

    <!--支付状态-->
    <declare-styleable name="AliPayView">
        <attr name="progress_width" format="dimension"/>
        <attr name="progress_radius" format="dimension"/>
        <attr name="progress_color" format="color"/>
        <attr name="loading_success_color" format="color"/>
        <attr name="loading_fail_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>

    <!--自定义ImageView属性-->
    <declare-styleable name="ScaleImageView">
        <attr name="min_scale_factor" format="float"/>
        <attr name="max_scale_factor" format="float"/>
        <attr name="can_back_translate" format="boolean"/>
        <attr name="can_back_rotate" format="boolean"/>
        <attr name="can_back_scale" format="boolean"/>
        <attr name="animator_time" format="integer"/>
    </declare-styleable>

    <declare-styleable name="PasswordEditText">
        <!--密码的个数-->
        <attr name="passwordNumber" format="integer" />

        <!--密码圆点的颜色-->
        <attr name="passwordColor" format="color" />
        <!--分割线的颜色-->
        <attr name="divisionLineColor" format="color" />
        <!--背景边框的颜色-->
        <attr name="bgColor" format="color" />

        <!--分割线的大小-->
        <attr name="divisionLineSize" format="dimension" />
        <!--背景边框的大小-->
        <attr name="bgSize" format="dimension" />
        <!--背景边框的圆角大小-->
        <attr name="bgCorner" format="dimension" />
        <!--密码圆点的半径-->
        <attr name="passwordRadius" format="dimension" />
    </declare-styleable>
</resources>